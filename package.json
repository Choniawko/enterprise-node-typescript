{
  "name": "mw-bp-node-typescript",
  "version": "1.0.0",
  "description": "Boilerplate project for a Node.js backend with Typescript support.",
  "main": "src/index.ts",
  "scripts": {
    "start": "NODE_ENV=development node_modules/.bin/nodemon --exec 'npm run lint && node_modules/.bin/ts-node src/index.ts'",
    "prod": "NODE_ENV=production node_modules/.bin/ts-node src/index.ts",
    "lint": "node_modules/.bin/tslint 'src/**/*.ts' -t verbose --force",
    "test": "node_modules/.bin/ts-node node_modules/.bin/tape './src/**/*.spec.ts' | tap-spec"
  },
  "author": "Brian Sokol <brian.sokol@slalom.com>",
  "license": "MIT",
  "dependencies": {
    "@types/express": "^4.0.32",
    "@types/node": "^6.0.45",
    "@types/tape": "^4.2.28",
    "express": "^4.14.0"
  },
  "devDependencies": {
    "nodemon": "^1.11.0",
    "tap-spec": "^4.1.1",
    "tape": "^4.6.2",
    "ts-node": "^1.4.1",
    "tslint": "^3.15.1",
    "typescript": "^2.0.3",
    "@types/express": "4.0.32",
    "@types/winston": "0.0.28"
  }
}
