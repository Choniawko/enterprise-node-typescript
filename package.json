{
  "name": "mw-bp-node-typescript",
  "version": "1.0.0",
  "description": "Boilerplate project for a Node.js backend with Typescript support.",
  "main": "src/index.ts",
  "scripts": {
    "start": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'npm run lint && ts-node src/index.ts'",
    "prod": "ts-node src/index.ts",
    "lint": "tslint 'src/**/*.ts' -t verbose --force",
    "test": "ts-node node_modules/tape/bin/tape './src/**/*.spec.ts' | tap-spec"
  },
  "author": "Brian Sokol <brian.sokol@slalom.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^6.0.45",
    "nodemon": "^1.11.0",
    "tap-spec": "^4.1.1",
    "tape": "^4.6.2",
    "ts-node": "^1.4.1",
    "tslint": "^3.15.1",
    "typescript": "^2.0.3"
  }
}
